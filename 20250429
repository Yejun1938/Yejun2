from tkinter import *
win = Tk()
canvas = Canvas(win, bg = "white", width = 600, hight = 600)
btn_white = Button(win, text = "white", bg = "white", fg = "black")
btn_balck = Button(win, text = "balck", bg = "black", fg = "white")
btn_blue = Button(win, text = "black", bg = "black", fg = "white")
btn_green = Button(win, text = "white", bg = "white", fg = "black")
btn_yellow = Button(win, text = "white", bg = "white", fg = "black")
btn_red = Button(win, text = "white", bg = "white", fg = "black")
btn_plus = Button(win, text = "white", bg = "white", fg = "black")
btn_minus = Button(win, text = "white", bg = "white", fg = "black")
btn_clear = Button(win, text = "white", bg = "white", fg = "black")





















